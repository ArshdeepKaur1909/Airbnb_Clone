<%  layout("layouts/boilerplate") %>
<div class="row" >
  <div class="col-8 offset-2">
     <h1>Create a new Listing</h1>
<form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
  <div class="mb-3" >
    <label  class="form-label" for="title" >Title </label>
    <input required class="form-control" type="text" id="title" name="listing[title]" >
    <div class="invalid-feedback">Please enter a valid title</div> <!-- This div we are adding for showing out message when required field is not filled-->
  </div>
  <div class="mb-3" >
    <label  class="form-label" for="description" >Description</label>
    <textarea  required class="form-control" id="description" name="listing[description]" ></textarea>
    <div class="invalid-feedback">Please enter a valid description</div>
  </div>
  <!-- <div class="mb-3" >
      <label  class="form-label" for="image" >Image Link</label>
      <input class="form-control" type="text" id="image" name="listing[image]" >
    </div> -->
  <div class="mb-3" >
      <label  class="form-label" for="image" >Upload Image</label>
      <input required class="form-control" type="file" id="image" name="listing[image]" >
      <div class="invalid-feedback">Please upload a image</div>
  </div>   
  <div class="row" >
    <div class="mb-3 col-md-4"  >
      <label  class="form-label" for="price" >Price</label>
      <input required class="form-control" type="text" id="price" name="listing[price]" >
      <div class="invalid-feedback">Please enter a valid price</div>
    </div>
    <div class="mb-3 col-md-8" >
      <label  class="form-label" for="country" >Country</label>
      <input required class="form-control" type="text" id="country" name="listing[country]" >
      <div class="invalid-feedback">Please enter a valid country name</div>
    </div>
  </div>
  <div class="mb-3" >
    <label  class="form-label" for="location" >Location</label>
    <input required class="form-control" type="text" id="location" name="listing[location]" >
    <div class="invalid-feedback">Please enter a valid location</div>
  </div>
  <button class="btn add-btn">Add</button>
</form>
  </div>
</div>