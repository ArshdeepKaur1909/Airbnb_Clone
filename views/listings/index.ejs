<% layout("layouts/boilerplate") %>
  <main>
    <h1>All Listings</h1>
      <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1" >
      <% for(const listing of Listings) {%>
        <a href="/listings/<%= listing._id%>">
          <div class="card col">
          <img src=<%= listing.image%> class="card-img-top" alt="listing-image">
          <div class="card-img-overlay"></div>
          <div class="card-body">
           <p class="card-title"><%= listing.title%></p>
           <p class="card-price">&#8377;<%= listing.price.toLocaleString("en-IN")%></p>
          </div>
        </div>
        </a>
      <% } %>
      </div>
  </main>