<% layout("layouts/boilerplate") %>

<div class="row" >
  <div class="col-8 offset-2">
     <h1>Edit <%= listing.title%></h1>
<form action="/listing/<%=  listing._id%>?_method=PUT" method="post" >
  <div class="mb-3" >
    <label  class="form-label" for="title" >Title </label>
    <input class="form-control" type="text" id="title" name="listing[title]" value="<%= listing.title%>">
  </div>
  <div class="mb-3" >
    <label  class="form-label" for="description" >Description</label>
    <textarea  class="form-control" id="description" name="listing[description]" ><%= listing.description%></textarea>
  </div>
  <div class="mb-3" >
      <label  class="form-label" for="image" >Image Link</label>
      <input class="form-control" type="text" id="image" name="listing[image]" value="<%= listing.image%>">
  </div>
  <div class="row" >
    <div class="mb-3 col-md-4"  >
      <label  class="form-label" for="price" >Price</label>
      <input class="form-control" type="number" id="price" name="listing[price]" value="<%= listing.price%>">
    </div>
    <div class="mb-3 col-md-8" >
      <label  class="form-label" for="country" >Country</label>
      <input class="form-control" type="text" id="country" name="listing[country]" value="<%= listing.country%>">
    </div>
  </div>
  <div class="mb-3" >
    <label  class="form-label" for="location" >Location</label>
    <input class="form-control" type="text" id="location" name="listing[location]" value="<%= listing.location%>">
  </div>
  <button class="btn">Done</button>
</form>
  </div>
</div>