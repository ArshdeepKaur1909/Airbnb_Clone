<!-- successMsg = [] when not any success message is stored -->
<% if(successMsg && successMsg.length){%>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= successMsg%>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>  
<% }%>

<!-- errorMsg = [] when not any success message is stored -->
<% if(errorMsg && errorMsg.length){%>
<div class="alert alert-danger alert-warning alert-dismissible fade show" role="alert">
  <%= errorMsg%>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>  
<% }%>